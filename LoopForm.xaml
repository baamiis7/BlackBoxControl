<UserControl x:Class="BlackBoxControl.LoopForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BlackBoxControl"
             x:Name="LoopConfig"
             Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="20">
        <StackPanel Orientation="Vertical" MaxWidth="800">

            <!-- Header -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,2"
                    Padding="0,0,0,15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Loop Configuration" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Configure loop settings and manage connected devices" 
                               FontSize="13"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                </StackPanel>
            </Border>

            <!-- Main Content Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">

                    <!-- Loop Information -->
                    <GroupBox Header="Loop Information" Padding="15" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Loop Number:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding Loop.LoopNumber, Mode=TwoWay}" 
                                     Margin="0,0,0,10"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Loop Name:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding Loop.LoopName, Mode=TwoWay}" 
                                     Margin="0,0,0,10"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Loop Protocol:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" 
                                      ItemsSource="{Binding Protocols}" 
                                      SelectedItem="{Binding Loop.LoopProtocol, Mode=TwoWay}"
                                      Margin="0,0,0,10"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="Device Count:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                     Text="{Binding Loop.NumberOfDevices, Mode=TwoWay}" 
                                     IsReadOnly="True"
                                     Background="{StaticResource SurfaceBrush}"
                                     ToolTip="This field is automatically calculated"/>
                        </Grid>
                    </GroupBox>

                    <!-- Loop Statistics (Optional Enhancement) -->
                    <GroupBox Header="Loop Statistics" Padding="15" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Stat Card 1 -->
                            <Border Grid.Row="0" Grid.Column="0" 
                                    Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="10"
                                    Margin="0,0,5,10">
                                <StackPanel>
                                    <TextBlock Text="Total Devices" 
                                               FontSize="11"
                                               Foreground="{StaticResource ForegroundDimBrush}"/>
                                    <TextBlock Text="{Binding Loop.NumberOfDevices}" 
                                               FontSize="24"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Stat Card 2 -->
                            <Border Grid.Row="0" Grid.Column="1" 
                                    Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="10"
                                    Margin="5,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Protocol" 
                                               FontSize="11"
                                               Foreground="{StaticResource ForegroundDimBrush}"/>
                                    <TextBlock Text="{Binding Loop.LoopProtocol}" 
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               Margin="0,5,0,0"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>

                            <!-- Info Message -->
                            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                    Background="#1A3498DB"
                                    BorderBrush="{StaticResource SecondaryBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="10">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="16" Height="16" 
                                             Fill="{StaticResource SecondaryBrush}"
                                             Margin="0,0,10,0"
                                             VerticalAlignment="Top"/>
                                    <TextBlock Text="Devices can be added by dragging them from the device palette to this loop in the Panel Explorer."
                                               FontSize="12"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </GroupBox>

                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">

                    <!-- Loop Image Configuration -->
                    <GroupBox Header="Loop Image" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Content="Image Path:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" 
                                         Text="{Binding Loop.ImagePath, ElementName=LoopConfig}"/>
                            </Grid>

                            <Border BorderBrush="{StaticResource BorderBrush}" 
                                    BorderThickness="2" 
                                    CornerRadius="6"
                                    Background="{StaticResource SurfaceBrush}"
                                    Padding="15"
                                    HorizontalAlignment="Center">
                                <Grid>
                                    <Image Source="{Binding Loop.ImagePath, ElementName=LoopConfig}" 
                                           Height="200" 
                                           Width="200"
                                           Stretch="Uniform">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Style.Triggers>
                                                    <!-- Show placeholder if no image -->
                                                    <Trigger Property="Source" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>

                                    <!-- Placeholder when no image -->
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Loop.ImagePath, ElementName=LoopConfig}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Loop.ImagePath, ElementName=LoopConfig}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>

                                        <Ellipse Width="60" Height="60" 
                                                 Fill="{StaticResource BorderBrush}"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,10"/>
                                        <TextBlock Text="No Image" 
                                                   Foreground="{StaticResource ForegroundDimBrush}"
                                                   FontSize="14"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Specify an image path above" 
                                                   Foreground="{StaticResource ForegroundDimBrush}"
                                                   FontSize="11"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </GroupBox>

                    <!-- Device Management Tips -->
                    <GroupBox Header="Quick Tips" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <Border Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="•" 
                                               Foreground="{StaticResource PrimaryBrush}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Loop number must be unique within the panel"
                                               FontSize="12"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="•" 
                                               Foreground="{StaticResource PrimaryBrush}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Select the appropriate protocol for your devices"
                                               FontSize="12"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="•" 
                                               Foreground="{StaticResource PrimaryBrush}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Device count updates automatically as you add devices"
                                               FontSize="12"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </Grid>

            <!-- Action Buttons -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="0,20,0,0"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Save Changes" 
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="120"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>