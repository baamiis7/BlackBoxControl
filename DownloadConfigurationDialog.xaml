<Window x:Class="BlackBoxControl.Views.DownloadConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Configuration from ESP32"
        Width="700" Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

  <Window.Resources>
    <Style TargetType="Button">
      <Setter Property="MinWidth" Value="100"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="Padding" Value="10,5"/>
    </Style>

    <Style TargetType="TextBlock">
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="5"/>
    </Style>
  </Window.Resources>

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Title -->
    <TextBlock Grid.Row="0" Text="Download Configuration from ESP32 Panel"
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

    <!-- Connection Section -->
    <GroupBox Grid.Row="1" Header="Connection" Padding="10" Margin="0,0,0,10">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- COM Port Selection -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="COM Port:"/>
        <ComboBox Grid.Row="0" Grid.Column="1"
                          ItemsSource="{Binding AvailablePorts}"
                          SelectedItem="{Binding SelectedPort}"
                          DisplayMemberPath="PortName"
                          Margin="5"/>

        <Button Grid.Row="0" Grid.Column="2"
                        Content="üîÑ Refresh"
                        Command="{Binding RefreshPortsCommand}"
                        ToolTip="Refresh COM port list"/>

        <!-- Connect/Disconnect Button -->
        <Button Grid.Row="0" Grid.Column="3">
          <Button.Style>
            <Style TargetType="Button">
              <Setter Property="Content" Value="Connect"/>
              <Setter Property="Command" Value="{Binding ConnectCommand}"/>
              <Setter Property="Background" Value="#4CAF50"/>
              <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                  <Setter Property="Content" Value="Disconnect"/>
                  <Setter Property="Command" Value="{Binding DisconnectCommand}"/>
                  <Setter Property="Background" Value="#F44336"/>
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </Button.Style>
        </Button>

        <!-- Connection Status -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                            Orientation="Horizontal" Margin="0,10,0,0">
          <Ellipse Width="12" Height="12" Margin="0,0,10,0">
            <Ellipse.Style>
              <Style TargetType="Ellipse">
                <Setter Property="Fill" Value="Red"/>
                <Style.Triggers>
                  <DataTrigger Binding="{Binding IsConnected}" Value="True">
                    <Setter Property="Fill" Value="Green"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Ellipse.Style>
          </Ellipse>
          <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold"/>
        </StackPanel>
      </Grid>
    </GroupBox>

    <!-- Download Progress Section -->
    <GroupBox Grid.Row="2" Header="Download Progress" Padding="10" Margin="0,0,0,10">
      <StackPanel>
        <ProgressBar Height="25" Value="{Binding DownloadProgress}" Maximum="100"/>
        <TextBlock Text="{Binding DownloadProgress, StringFormat={}{0}%}"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
      </StackPanel>
    </GroupBox>

    <!-- Log Section -->
    <GroupBox Grid.Row="3" Header="Log" Padding="10">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <TextBox Text="{Binding LogMessages, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="11"
                         Background="#F5F5F5"
                         BorderThickness="0"
                         VerticalScrollBarVisibility="Auto"/>
      </ScrollViewer>
    </GroupBox>

    <!-- Action Buttons -->
    <StackPanel Grid.Row="4" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="üì• Download Configuration"
                    Command="{Binding DownloadCommand}"
                    IsEnabled="{Binding CanDownload}"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"/>

      <Button Content="‚èπ Cancel Download"
                    Command="{Binding CancelCommand}"
                    IsEnabled="{Binding CanCancel}"
                    Background="#FF5722"
                    Foreground="White"/>

      <Button Content="Close"
                    Command="{Binding CloseCommand}"
                    IsDefault="True"/>
    </StackPanel>

    <!-- Info Section -->
    <Border Grid.Row="5" Background="#E8F5E9" Padding="10" Margin="0,10,0,0"
                BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="3">
      <StackPanel>
        <TextBlock FontWeight="Bold" Foreground="#2E7D32">
                    ‚ÑπÔ∏è Instructions:
        </TextBlock>
        <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                    1. Connect ESP32 to your computer via USB
        </TextBlock>
        <TextBlock TextWrapping="Wrap">
                    2. Select the correct COM port and click Connect
        </TextBlock>
        <TextBlock TextWrapping="Wrap">
                    3. Click 'Download Configuration' to retrieve data from ESP32
        </TextBlock>
        <TextBlock TextWrapping="Wrap">
                    4. The downloaded configuration will be loaded into the application
        </TextBlock>
      </StackPanel>
    </Border>
  </Grid>
</Window>
