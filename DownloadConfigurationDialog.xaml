<Window x:Class="BlackBoxControl.Views.DownloadConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:BlackBoxControl.Converters"
        Title="Download Configuration from ESP32"
        Width="700" Height="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}">

  <Window.Resources>
    <converters:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
    <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
  </Window.Resources>

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Title -->
    <TextBlock Grid.Row="0" Text="Download Configuration from ESP32 Panel"
               FontSize="18" FontWeight="Bold" 
               Foreground="{DynamicResource ForegroundBrush}"
               Margin="0,0,0,15"/>

    <!-- Simulator Mode Warning Banner -->
    <Border Grid.Row="1" 
            Background="{DynamicResource WarningBrush}" 
            Padding="10" 
            Margin="0,0,0,10" 
            CornerRadius="4"
            Visibility="{Binding IsSimulatorMode, Converter={StaticResource BoolToVisibilityConverter}}">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="‚ö†Ô∏è SIMULATOR MODE ACTIVE" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   FontSize="13"
                   VerticalAlignment="Center"/>
        <TextBlock Text=" - Using virtual ESP32 (no hardware required)" 
                   Foreground="White" 
                   FontSize="12"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"/>
      </StackPanel>
    </Border>

    <!-- Connection Section -->
    <GroupBox Grid.Row="2" Header="Connection" Padding="10" Margin="0,0,0,10">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Simulator Checkbox -->
        <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                  Content="üñ•Ô∏è Use Virtual ESP32 Simulator (for testing without hardware)"
                  IsChecked="{Binding UseSimulator}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  FontSize="12"
                  FontWeight="Medium"
                  Margin="0,0,0,10"
                  ToolTip="Enable this to test upload/download without physical ESP32 hardware"/>

        <!-- COM Port Selection -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="COM Port:"
                   Foreground="{DynamicResource ForegroundBrush}"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <ComboBox Grid.Row="1" Grid.Column="1"
                  ItemsSource="{Binding AvailablePorts}"
                  SelectedItem="{Binding SelectedPort}"
                  DisplayMemberPath="PortName"
                  IsEnabled="{Binding CanSelectPort}"
                  Margin="5"/>

        <Button Grid.Row="1" Grid.Column="2"
                Content="üîÑ Refresh"
                Command="{Binding RefreshPortsCommand}"
                IsEnabled="{Binding CanSelectPort}"
                Style="{StaticResource SecondaryButton}"
                ToolTip="Refresh COM port list"/>

        <!-- Connect/Disconnect Button -->
        <Button Grid.Row="1" Grid.Column="3">
          <Button.Style>
            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
              <Setter Property="Content" Value="Connect"/>
              <Setter Property="Command" Value="{Binding ConnectCommand}"/>
              <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
              <Style.Triggers>
                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                  <Setter Property="Content" Value="Disconnect"/>
                  <Setter Property="Command" Value="{Binding DisconnectCommand}"/>
                  <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </Button.Style>
        </Button>

        <!-- Connection Status -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
                    Orientation="Horizontal" Margin="0,10,0,0">
          <Ellipse Width="12" Height="12" Margin="0,0,10,0"
                   Fill="{Binding IsConnected, Converter={StaticResource BooleanToBrushConverter}}"/>
          <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold"
                     Foreground="{DynamicResource ForegroundBrush}"/>
        </StackPanel>
      </Grid>
    </GroupBox>

    <!-- Download Progress Section -->
    <GroupBox Grid.Row="3" Header="Download Progress" Padding="10" Margin="0,0,0,10">
      <StackPanel>
        <ProgressBar Height="25" Value="{Binding DownloadProgress}" Maximum="100"
                     Foreground="{DynamicResource PrimaryBrush}"/>
        <TextBlock Text="{Binding DownloadProgress, StringFormat={}{0}%}"
                   HorizontalAlignment="Center" Margin="0,5,0,0"
                   Foreground="{DynamicResource ForegroundBrush}"/>
      </StackPanel>
    </GroupBox>

    <!-- Log Section -->
    <GroupBox Grid.Row="4" Header="Log" Padding="10">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <TextBox Text="{Binding LogMessages, Mode=OneWay}"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 FontSize="11"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderThickness="0"
                 VerticalScrollBarVisibility="Auto"/>
      </ScrollViewer>
    </GroupBox>

    <!-- Action Buttons -->
    <StackPanel Grid.Row="5" Orientation="Horizontal"
                HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="üì• Download Configuration"
              Command="{Binding DownloadCommand}"
              IsEnabled="{Binding CanDownload}"
              Style="{StaticResource PrimaryButton}"
              FontWeight="Bold"/>

      <Button Content="‚èπ Cancel Download"
              Command="{Binding CancelCommand}"
              IsEnabled="{Binding CanCancel}"
              Style="{StaticResource PrimaryButton}"
              Background="{DynamicResource DangerBrush}"/>

      <Button Content="Close"
              Command="{Binding CloseCommand}"
              Style="{StaticResource SecondaryButton}"
              IsDefault="True"/>
    </StackPanel>

    <!-- Info Section -->
    <Border Grid.Row="6" Background="{DynamicResource SurfaceBrush}" 
            Padding="10" Margin="0,10,0,0"
            BorderBrush="{DynamicResource SuccessBrush}" 
            BorderThickness="1" CornerRadius="3">
      <StackPanel>
        <TextBlock FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}">
          ‚ÑπÔ∏è Instructions:
        </TextBlock>
        <TextBlock TextWrapping="Wrap" Margin="0,5,0,0"
                   Foreground="{DynamicResource ForegroundBrush}">
          1. Check "Use Simulator" for testing, or connect ESP32 via USB for real hardware
        </TextBlock>
        <TextBlock TextWrapping="Wrap"
                   Foreground="{DynamicResource ForegroundBrush}">
          2. Select the correct COM port and click Connect
        </TextBlock>
        <TextBlock TextWrapping="Wrap"
                   Foreground="{DynamicResource ForegroundBrush}">
          3. Click 'Download Configuration' to retrieve data from ESP32
        </TextBlock>
        <TextBlock TextWrapping="Wrap"
                   Foreground="{DynamicResource ForegroundBrush}">
          4. The downloaded configuration will be loaded into the application
        </TextBlock>
      </StackPanel>
    </Border>
  </Grid>
</Window>
