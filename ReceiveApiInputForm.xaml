<UserControl x:Class="BlackBoxControl.ReceiveApiInputForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="600">

            <!-- Header -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,2"
                    Padding="0,0,0,15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🌐 API Webhook Input" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Configure incoming API requests as triggers" 
                               FontSize="13"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                </StackPanel>
            </Border>

            <!-- Configuration -->
            <GroupBox Header="API Webhook Configuration" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Listen URL:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Input.ListenUrl, Mode=TwoWay}"
                                 ToolTip="The URL endpoint to listen for incoming requests"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="HTTP Method:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" SelectedItem="{Binding Input.HttpMethod, Mode=TwoWay}">
                            <ComboBoxItem Content="GET"/>
                            <ComboBoxItem Content="POST"/>
                            <ComboBoxItem Content="PUT"/>
                            <ComboBoxItem Content="DELETE"/>
                        </ComboBox>

                        <Label Grid.Column="3" Content="Path:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="4" 
                                 Text="{Binding Input.ExpectedPath, Mode=TwoWay}"
                                 ToolTip="Expected path (e.g., /webhook/fire-alarm)"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Auth Token:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Input.AuthToken, Mode=TwoWay}"
                                 ToolTip="Optional: Bearer token for authentication"/>
                    </Grid>

                    <Border Background="#1A0078D4"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10">
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource ForegroundBrush}">
                            <Run Text="Listening for " FontWeight="Bold"/>
                            <Run Text="{Binding Input.HttpMethod}" 
                                 Foreground="{StaticResource PrimaryBrush}" 
                                 FontWeight="Bold"/>
                            <Run Text=" requests at " FontWeight="Bold"/>
                            <Run Text="{Binding Input.ListenUrl}" 
                                 Foreground="{StaticResource PrimaryBrush}" 
                                 FontWeight="Bold"/>
                            <Run Text="{Binding Input.ExpectedPath}" 
                                 Foreground="{StaticResource PrimaryBrush}" 
                                 FontWeight="Bold"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Delete" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding DeleteCommand}"/>
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Save" 
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="100"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>