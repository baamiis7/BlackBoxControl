```csharp
// Auto-save feature
private DispatcherTimer _autoSaveTimer;

private void InitializeAutoSave()
{
    _autoSaveTimer = new DispatcherTimer();
    _autoSaveTimer.Interval = TimeSpan.FromMinutes(5);
    _autoSaveTimer.Tick += (s, e) => AutoSave();
    _autoSaveTimer.Start();
}

private void AutoSave()
{
    try
    {
        var autoSavePath = Path.Combine(
            Environment.GetFolderPath(Environment.SpecialFolder.LocalApplicationData),
            "BlackBoxControl", "AutoSave", "project_autosave.kbb");
        
        ProjectService.SaveProject(CurrentProject, autoSavePath);
        Logger.Debug("Auto-save completed");
    }
    catch (Exception ex)
    {
        Logger.Error(ex, "Auto-save failed");
    }
}
