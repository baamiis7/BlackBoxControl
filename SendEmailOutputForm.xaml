<UserControl x:Class="BlackBoxControl.SendEmailOutputForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="600">

            <!-- Header -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,2"
                    Padding="0,0,0,15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📧 Email Notification" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Configure email notifications" 
                               FontSize="13"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                </StackPanel>
            </Border>

            <!-- Configuration -->
            <GroupBox Header="Email Configuration" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Email Address:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Output.EmailAddress, Mode=TwoWay}"
                                 ToolTip="Enter email address"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Subject:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Output.Subject, Mode=TwoWay}"
                                 ToolTip="Enter email subject"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Body:" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Output.Body, Mode=TwoWay}"
                                 Height="150"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 ToolTip="Enter the email body"/>
                    </Grid>

                    <Border Background="#1A03DAC6"
                            BorderBrush="{StaticResource SecondaryBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10">
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource ForegroundBrush}">
                            <Run Text="Email will be sent to " FontWeight="Bold"/>
                            <Run Text="{Binding Output.EmailAddress}" 
                                 Foreground="{StaticResource SecondaryBrush}" 
                                 FontWeight="Bold"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Delete" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding DeleteCommand}"/>
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Save" 
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="100"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>