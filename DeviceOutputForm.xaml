<UserControl x:Class="BlackBoxControl.DeviceOutputForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="600">

            <!-- Header -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,2"
                    Padding="0,0,0,15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="✅ Device Output" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="View or modify device output configuration" 
                               FontSize="13"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                </StackPanel>
            </Border>

            <!-- Device Information -->
            <GroupBox Header="Device Information" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Device Type:" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Output.Type}" 
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource ForegroundBrush}"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Device ID:" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Output.DeviceId}" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource ForegroundBrush}"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Location:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Output.LocationText, Mode=TwoWay}"
                                 ToolTip="You can modify the location description"/>
                    </Grid>

                    <Border Background="#1A03DAC6"
                            BorderBrush="{StaticResource SecondaryBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Device Preview" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource SecondaryBrush}"
                                       Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
                                       Source="{Binding Output.ImagePath}"
                                       Width="48"
                                       Height="48"
                                       Margin="0,0,15,0"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Output.Type}" 
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="{StaticResource ForegroundBrush}"/>
                                    <TextBlock Text="{Binding Output.LocationText}" 
                                               FontSize="12"
                                               Foreground="{StaticResource ForegroundDimBrush}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Delete" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding DeleteCommand}"/>
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Save" 
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="100"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>