<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- OR Gate -->
    <DrawingImage x:Key="OrGateIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#3498DB">
                    <GeometryDrawing.Geometry>
                        <PathGeometry Figures="M0,0 Q40,25 0,50 L20,50 Q60,25 20,0 Z"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="Transparent" Pen="{x:Null}">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="55,25" RadiusX="5" RadiusY="5"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

    <!-- AND Gate -->
    <DrawingImage x:Key="AndGateIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#2ECC71">
                    <GeometryDrawing.Geometry>
                        <PathGeometry Figures="M0,0 L30,0 Q60,0 60,25 Q60,50 30,50 L0,50 Z"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

    <!-- XOR Gate -->
    <DrawingImage x:Key="XorGateIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#F39C12">
                    <GeometryDrawing.Geometry>
                        <PathGeometry Figures="M0,0 Q40,25 0,50 L20,50 Q60,25 20,0 Z M-5,5 Q35,25 -5,45"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <GeometryDrawing Brush="Transparent" Pen="{x:Null}">
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="55,25" RadiusX="5" RadiusY="5"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

</ResourceDictionary>