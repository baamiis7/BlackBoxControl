<UserControl x:Class="BlackBoxControl.TimeOfDayInputForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="600">

            <!-- Header -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,2"
                    Padding="0,0,0,15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🕐 Time of Day Schedule" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Configure a time window for triggering this cause and effect" 
                               FontSize="13"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                </StackPanel>
            </Border>

            <!-- Configuration -->
            <GroupBox Header="Schedule Configuration" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Start Time:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Input.StartTime, StringFormat='hh\\:mm', Mode=TwoWay}"
                                 ToolTip="Format: HH:mm (e.g., 09:00)"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="End Time:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Input.EndTime, StringFormat='hh\\:mm', Mode=TwoWay}"
                                 ToolTip="Format: HH:mm (e.g., 17:00)"/>
                    </Grid>

                    <Border Background="#1A0078D4"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10">
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource ForegroundBrush}">
                            <Run Text="This input will trigger between " FontWeight="Bold"/>
                            <Run Text="{Binding Input.StartTime, StringFormat='hh\\:mm'}" 
                                 Foreground="{StaticResource PrimaryBrush}" 
                                 FontWeight="Bold"/>
                            <Run Text=" and " FontWeight="Bold"/>
                            <Run Text="{Binding Input.EndTime, StringFormat='hh\\:mm'}" 
                                 Foreground="{StaticResource PrimaryBrush}" 
                                 FontWeight="Bold"/>
                            <Run Text=" every day." FontWeight="Bold"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Delete" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding DeleteCommand}"/>
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Save" 
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="100"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>