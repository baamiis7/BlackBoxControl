<UserControl x:Class="BlackBoxControl.SendApiOutputForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="600">

            <!-- Header -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,2"
                    Padding="0,0,0,15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🌐 API Request" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Configure API HTTP requests" 
                               FontSize="13"
                               Foreground="{StaticResource ForegroundDimBrush}"/>
                </StackPanel>
            </Border>

            <!-- Configuration -->
            <GroupBox Header="API Configuration" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="API URL:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Output.ApiUrl, Mode=TwoWay}"
                                 ToolTip="Enter the API endpoint URL"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="HTTP Method:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" SelectedItem="{Binding Output.HttpMethod, Mode=TwoWay}">
                            <ComboBoxItem Content="GET"/>
                            <ComboBoxItem Content="POST"/>
                            <ComboBoxItem Content="PUT"/>
                            <ComboBoxItem Content="DELETE"/>
                        </ComboBox>

                        <Label Grid.Column="3" Content="Content Type:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="4" SelectedItem="{Binding Output.ContentType, Mode=TwoWay}">
                            <ComboBoxItem Content="application/json"/>
                            <ComboBoxItem Content="application/xml"/>
                            <ComboBoxItem Content="text/plain"/>
                        </ComboBox>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Request Body:" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="1" 
                                 Text="{Binding Output.RequestBody, Mode=TwoWay}"
                                 Height="150"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 FontFamily="Consolas"
                                 VerticalScrollBarVisibility="Auto"
                                 ToolTip="Enter the request body (JSON/XML)"/>
                    </Grid>

                    <Border Background="#1A03DAC6"
                            BorderBrush="{StaticResource SecondaryBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10">
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource ForegroundBrush}">
                            <Run Text="{Binding Output.HttpMethod}" FontWeight="Bold"/>
                            <Run Text=" request will be sent to " FontWeight="Bold"/>
                            <Run Text="{Binding Output.ApiUrl}" 
                                 Foreground="{StaticResource SecondaryBrush}" 
                                 FontWeight="Bold"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Delete" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding DeleteCommand}"/>
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButton}"
                            MinWidth="100"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"/>
                    <Button Content="Save" 
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="100"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>